class personagem:
    def __init__(self, nome):
        self.nome = nome
        self.vida = 100
        
    def atacar(self, oponente):
        pass
    
    def receber_dano(self, dano):
        self.vida -= dano
        print(f"{self.nome} recebeu {dano} de dano. vida restante: {self.vida}")
        if self.vida <= 0:
            print(f"{self.nome} foi derrotado!")

class guerreiro(personagem):
    def __init__(self, nome):
        super().__init__(nome)
        self.vida = 1800 
        
    def atacar(self, oponente):
        dano = 30
        print(f"{self.nome} ataque físicamente {oponente.nome} causa {dano} de dano.")
        oponente.receber_dano(dano)

class Mago(personagem):
    def __init__(self, nome):
        super().__init__(nome)
        self.vida = 1200
        
    def atacar(self, oponente):
        dano = 40
        print(f"{self.nome} lança magia em {oponente.nome} causando {dano} de dano.")
        oponente.receber_dano(dano)

guerreiro = guerreiro("jair bolsonaro")
Mago = Mago ("lula ladrão")

print(f"{guerreiro.nome} - vida: {guerreiro.vida}")
print(f"{Mago.nome} - vida: {Mago.vida}")

turno = 0
while guerreiro.vida > 0 and Mago.vida > 0:
    turno += 1
    print(f"\nturno {turno}:")
    if turno % 2 == 1:
        guerreiro.atacar(Mago)
    else:
        Mago.atacar(guerreiro)
        
if guerreiro.vida > 0:
    print(f"\n{guerreiro.nome} venceu!")
else:
    print(f"\n{Mago.nome} venceu!")
