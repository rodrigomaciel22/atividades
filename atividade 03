import tkinter as tk
from tkinter import messagebox

def identificar_numero():
    try:
        numero = float(entry_numero.get())
        if numero > 0:
            messagebox.showinfo("Resultado", "Número positivo")
        elif numero < 0:
            messagebox.showinfo("Resultado", "Número negativo")
        else:
            messagebox.showinfo("Resultado", "Número igual a zero")
    except ValueError:
        messagebox.showerror("Erro", "Por favor, insira um número válido")

root = tk.Tk()
root.title("Identificador de Números")

label_numero = tk.Label(root, text="Digite um número:")
label_numero.pack(pady=10)

entry_numero = tk.Entry(root)
entry_numero.pack(pady=5)

button_identificar = tk.Button(root, text="Identificar", command=identificar_numero)
button_identificar.pack(pady=10)

root.mainloop()
